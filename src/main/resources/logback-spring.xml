<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="CONSOLE_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %magenta([%thread]) %highlight([%-3level]) %logger{5} - %msg %n"/>

    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>%{LOG_HOME}/%d{yyyy-MM-dd}/app.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxfileSize>500MB</maxfileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <charset>utf8</charset>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %thread [%X{traceId} %-5level %logger{5} - %msg %n</Pattern>
        </encoder>
    </appender>

    <springProfile name="local">
        <root level="DEBUG">
            <append-ref ref="STDOUT" />
            <append-ref ref="ROLLING_FILE" />
        </root>
    </springProfile>

    <springProfile name="dev">
        <root level="DEBUG">
            <append-ref ref="ROLLING_FILE" />
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="DEBUG">
            <append-ref ref="ROLLING_FILE" />
        </root>
    </springProfile>

</configuration>